@keyframes animateAtoB {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(45deg);
  }
}

@keyframes ShowOrHideA {
  0% {
    height: 0;
  }
  100% {
    height: 200rpx;
  }
}